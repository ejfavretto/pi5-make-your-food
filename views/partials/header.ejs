        <input type="text" name="search" id="search" placeholder="Buscar seu Lanche" />
      </form>
    </div>

    <div class="buttonDesktop">

      <div>
        <div class="cart" onclick="cartToggle();">
          <i class="fa-solid fa-bag-shopping"></i>
          <span>&#36; 0,00</span>
        </div>

        <div class="cartModal">
          <div class="cartModalDetail">

            <div class="mainOrders">
              <div class="cardsOrders">
                <div class="cardsOrdersOrder">

                  <div class="cardsOrdersOrderDetail">
                    <span class="descricao">Meu pedido</span>
