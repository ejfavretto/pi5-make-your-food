<%- include('../partials/head') %>
  <link rel="stylesheet" href="/stylesheet/components/header.css" />
  <link rel="stylesheet" href="/stylesheet/components/footer.css" />
  <link rel="stylesheet" href="/stylesheet/global.css" />
  <link rel="stylesheet" href="/stylesheet/user.css" />
  </head>

  <body>
    <%- include('../partials/header') %>


      <main>
        <h2>Dados de acesso</h2>

        <div class="mainLogin">
          <div class="minhaContaLogin">
            <form action="/user/userLogged" method="post" enctype="multipart/form-data">
              <div class="input-group">
                <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" required>
              </div>
              <div class="input-group">
                <label for="email">e-mail</label>
                <input type="email" id="email" name="email" required>
              </div>
              <div class="formBotoes">
                <button type="submit">Login</button>
              </div>
            </form>
          </div>

          <div class="divisao">
          </div>

          <div class="minhaContaCadastrese">
            <form action="/user/userCreated" method="post" enctype="multipart/form-data">
              <div class="input-group">
                <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" required>
              </div>
              <div class="input-group">
                <label for="email">e-mail</label>
                <input type="email" id="email" name="email" required>
              </div>
              <div class="input-group">
                <label for="senha">Senha</label>
                <input type="password" id="senha" name="senha" required>
              </div>
              <div class="input-group">
                <label for="senhaRepetida">Repita sua senha</label>
                <input type="password" id="emasenhaRepetidail" name="senhaRepetida" required>
              </div>
              <div class="formBotoes">
                <button type="submit">Cadastre-se</button>
              </div>
            </form>
          </div>
        </div>
      </main>
      <%- include('../partials/footer') %>
  </body>

  </html>